{% macro schedule_card2(item, classes="bg-purple-600") %}
    <div class="flex shadow-sm rounded-md cursor-pointer hover:shadow-lg m-4">
        <div class="flex-shrink-0 flex items-center justify-center w-16 {{classes}} text-white text-sm md:text-lg font-medium rounded-l-md ">
                <span class="-rotate-90">{{item.title}}</span>
            </div>
        <div class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md truncate">
            <div class="flex-1 px-4 py-2 text-sm md:text-lg truncate">
                <span class="text-gray-900 text-xl md:text-2xl font-medium hover:text-gray-600">{{item.route}}</span>
                <p class="text-gray-500 pt-2"><strong>{{item.day}}</strong></p>
                <p class="text-gray-500">Reporting  : <strong>{{item.reporting }}</strong></p>
                <p class="text-gray-500">Departure  : <strong>{{item.departure }}</strong></p>
                <p class="text-gray-500">Starts : <strong>{{item.location}}</p>
                <p class="text-gray-500">App. arrive : <strong>{{item.arrival}}</p>
            </div>
           
        </div>
    </div>
{% endmacro %}

{# Schedule #}
<section class="max-w-4xl mx-auto py-10">
    {{component('headings/section', schedule)}}
    <article class="py-10 flex flex-row flex-wrap justify-center">
